% Assets:
\usepackage{xhfill}

\newlength{\titlesep}
\setlength{\titlesep}{0.3cm}

\newcommand{\ruleColor}{black}
\newcommand{\sectionColor}{black}


% Title:
\newcommand{\name}[2]{%
    	\noindent\begin{minipage}[c]{\textwidth} \centering
	{ \headingfont\huge\textcolor{#2}{#1}}
    	\end{minipage} \par\vspace{\titlesep}
}


% Sections:
\usepackage[explicit]{titlesec}

\renewcommand{\section}[1]{%
	{%
	\vspace{0.8cm}
